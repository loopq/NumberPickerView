<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <FrameLayout
        android:id="@+id/dialogplus_outmost_container"
        android:layout_width="match_parent"
        android:background="@color/black_overlay"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/dialogplus_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:layout_height="@dimen/base220dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base50dp">

                    <ImageView
                        android:layout_width="@dimen/base36dp"
                        android:id="@+id/cancel_action"
                        android:layout_margin="@dimen/base6dp"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/cancel_action"
                        android:layout_height="@dimen/base24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="年龄选择"
                        android:textSize="@dimen/base16dp"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="@dimen/base36dp"
                        android:id="@+id/confirm_action"
                        android:layout_margin="@dimen/base6dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/confirm_action"
                        android:layout_height="@dimen/base24dp" />
                </RelativeLayout>

                <NumberPicker
                    android:id="@+id/numberPicker"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/base16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/base100dp" />
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>

</FrameLayout>